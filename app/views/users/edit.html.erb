<% provide(:title, t(:edit_user)) %> 
<h1><%= t :update_profile %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t(:confirm_password) %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(:save_changes), class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails"><%= t :change %></a>
  </div>
</div>