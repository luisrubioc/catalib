<% provide(:title, "Edit item") %> 
<h1><%= t :edit_item %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <%= f.label :status %>
      <%= f.text_field :status %>

      <%= f.label :lent %>
      <%= f.text_field :lent %>

      <%= f.label :notes %>
      <%= f.text_field :notes %>

      <%= f.submit t(:save_changes), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>